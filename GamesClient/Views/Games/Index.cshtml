@model IEnumerable<GamesClient.Services.Game>

@{
    ViewData["Title"] = "Index";
}

<div class="container mt-4">
    <h1 class="display-4">Games listed</h1>

    <p>
        <a class="btn btn-success" asp-action="Create">Create New</a>
    </p>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.GameID)</th>
                <th>@Html.DisplayNameFor(model => model.Title)</th>
                <th>@Html.DisplayNameFor(model => model.DateCreated)</th>
                <th>@Html.DisplayNameFor(model => model.Genre)</th>
                <th>@Html.DisplayNameFor(model => model.Description)</th>
                <th>@Html.DisplayNameFor(model => model.Active)</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.GameID)</td>
                    <td>@Html.DisplayFor(modelItem => item.Title)</td>
                    <td>@Html.DisplayFor(modelItem => item.DateCreated)</td>
                    <td>@Html.DisplayFor(modelItem => item.Genre)</td>
                    <td>@Html.DisplayFor(modelItem => item.Description)</td>
                    <td>@Html.DisplayFor(modelItem => item.Active)</td>
                    <td>
                        <div class="btn-group" role="group">
                            <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.GameID">Details</a>
                            <a class="btn btn-outline-primary ms-2" asp-action="Edit" asp-route-id="@item.GameID">Edit</a>
                            <a class="btn btn-outline-dark ms-2" asp-action="Delete" asp-route-id="@item.GameID">Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
