@model GamesClient.Services.Game

@{
    ViewData["Title"] = "Details";
}

<div class="container mt-4">
    <h1 class="display-4">Full game details</h1>

    <div>
        <h4>Game</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2 fw-bold">Game ID</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.GameID)</dd>

            <dt class="col-sm-2 fw-bold">Title</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Title)</dd>

            <dt class="col-sm-2 fw-bold">Date Created</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.DateCreated)</dd>

            <dt class="col-sm-2 fw-bold">Genre</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Genre)</dd>

            <dt class="col-sm-2 fw-bold">Description</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Description)</dd>

            <dt class="col-sm-2 fw-bold">Active</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Active)</dd>
        </dl>
    </div>

    <div class="mt-4">
        @Html.ActionLink("Edit", "Edit", new { id = Model.GameID }, new { @class = "btn btn-primary" }) 
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>
